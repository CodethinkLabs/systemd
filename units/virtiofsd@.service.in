[Unit]
Description=virtiofsd Service for directory %I
Requires=virtiofsd@%i.socket
After=virtiofsd@%i.socket

[Service]
Type=notify
ExecStart={{VIRTIOFSD_PATH}} --fd ${LISTEN_FDS} --shared-dir %I
RuntimeDirectory=virtiofsd/%i
RuntimeDirectoryPreserve=yes
Sockets=virtiofsd@%i.socket
